<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_praise"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wenrouquan"/>

            <ImageView
                android:id="@+id/iv_praise1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="116dp"
                android:layout_marginLeft="22dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/praise0"/>

            <ImageView
                android:id="@+id/iv_praise2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="78dp"
                android:layout_marginLeft="22dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/praise1"/>


            <ImageView
                android:id="@+id/iv_praise3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="22dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/praise2"/>

            <TextView
                android:id="@+id/tv_praise_sys_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="14:33"
                android:textColor="#99ffffff"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_praise_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="201dp"
                android:layout_marginLeft="60dp"
                android:text="10:33"
                android:textColor="#99363636"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_quan_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="65dp"
                android:lineSpacingMultiplier="1.04"
                android:text="10.21"
                android:textColor="#262626"
                android:textSize="15sp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_convert"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wenrouzone"/>

            <TextView
                android:id="@+id/tv_convert_list"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="606dp"
                android:lineSpacingMultiplier="1.3"
                android:text="     a"
                android:textColor="#3d6fa2"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_zone_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="75dp"
                android:lineSpacingMultiplier="1.04"
                android:text="10.23"
                android:textColor="#262626"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_convert_sys_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="14:33"
                android:textColor="#99ffffff"
                android:textSize="13sp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#a9e0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="时间点"
                    android:text="10"
                    android:textColor="#565656"/>

                <EditText
                    android:id="@+id/et_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="分享前缀"
                    android:textColor="#565656"/>
            </LinearLayout>

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="生成"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>