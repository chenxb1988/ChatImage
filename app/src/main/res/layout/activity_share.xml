<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/ll_quan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_quan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_quan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/quan1"/>

                    <TextView
                        android:id="@+id/tv_quan_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="85dp"
                        android:lineSpacingMultiplier="1.04"
                        android:text="@string/content_share"
                        android:textColor="#262626"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_quan_sys_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="14:33"
                        android:textColor="#99ffffff"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_quan_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="55dp"
                        android:layout_marginLeft="60dp"
                        android:text="10:33"
                        android:textColor="#99363636"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="55dp"
                        android:layout_marginLeft="95dp"
                        android:text="删除"
                        android:textColor="@color/textColorBlue"
                        android:textSize="12sp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_praise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/quan_praise"/>

                    <ImageView
                        android:id="@+id/iv_praise1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="118dp"
                        android:layout_marginLeft="22dp"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:src="@drawable/praise0"/>

                    <ImageView
                        android:id="@+id/iv_praise2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="80dp"
                        android:layout_marginLeft="22dp"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:src="@drawable/praise1"/>


                    <ImageView
                        android:id="@+id/iv_praise3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="42dp"
                        android:layout_marginLeft="22dp"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:src="@drawable/praise2"/>

                    <TextView
                        android:id="@+id/tv_praise_sys_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="14:33"
                        android:textColor="#99ffffff"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_praise_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="203dp"
                        android:layout_marginLeft="58dp"
                        android:text="10:33"
                        android:textColor="#99363636"
                        android:textSize="12sp"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/fl_zone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_zone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/zone1"/>

                    <TextView
                        android:id="@+id/tv_zone_sys_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="14:33"
                        android:textColor="#99ffffff"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_zone_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="110dp"
                        android:text="今天10:33"
                        android:textColor="#99363636"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_zone2_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="140dp"
                        android:text="1019"
                        android:textColor="#565656"
                        android:textSize="14sp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_convert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_convert"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/convert1"/>

                    <TextView
                        android:id="@+id/tv_convert_list"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="581dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="     a"
                        android:textColor="#3d6fa2"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_convert_sys_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="14:33"
                        android:textColor="#99ffffff"
                        android:textSize="13sp"/>
                </FrameLayout>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#a9e0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="时间点"
                    android:text="10"
                    android:textColor="#565656"/>

                <EditText
                    android:id="@+id/et_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="分享前缀"
                    android:textColor="#565656"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rb_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_zone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="空间1"
                    android:textColor="#e00"/>

                <RadioButton
                    android:id="@+id/rb_zone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空间2"
                    android:textColor="#e00"/>

                <RadioButton
                    android:id="@+id/rb_quan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈1"
                    android:textColor="#e00"/>

                <RadioButton
                    android:id="@+id/rb_quan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="朋友圈2"
                    android:textColor="#e00"/>
            </RadioGroup>

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="生成"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>