<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sky_quan"/>

            <ImageView
                android:id="@+id/iv_praise1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="208dp"
                android:layout_marginLeft="22dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/praise0"/>

            <ImageView
                android:id="@+id/iv_praise2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="169dp"
                android:layout_marginLeft="22dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/praise1"/>


            <ImageView
                android:id="@+id/iv_praise3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="22dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/praise2"/>

            <TextView
                android:id="@+id/tv_praise_sys_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="14:33"
                android:textColor="#99ffffff"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_praise_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="327dp"
                android:text="10:33"
                android:textColor="#99363636"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_quan_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="61dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="298dp"
                android:text="2017.1.1"
                android:textColor="#dc262626"
                android:textSize="14.5sp"/>

            <ImageView
                android:id="@+id/iv_shade1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="143dp"
                android:layout_marginRight="133dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/pic_shade"/>

            <ImageView
                android:id="@+id/iv_shade2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="143dp"
                android:layout_marginRight="95dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/pic_shade"/>

            <ImageView
                android:id="@+id/iv_shade3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="143dp"
                android:layout_marginRight="57dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/pic_shade"/>

            <ImageView
                android:id="@+id/iv_shade4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="143dp"
                android:layout_marginRight="20dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/pic_shade"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_convert"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sky_zone"/>

            <TextView
                android:id="@+id/tv_convert_list"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="510dp"
                android:lineSpacingMultiplier="1.3"
                android:text="     A"
                android:textColor="#3d6fa2"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_zone_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="398dp"
                android:lineSpacingMultiplier="1.04"
                android:text="10.23"
                android:textColor="#dc262626"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_convert_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="127dp"
                android:text="14:33"
                android:textColor="#99262626"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_convert_sys_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="14:33"
                android:textColor="#99ffffff"
                android:textSize="13sp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#a9e0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="改变数据"/>

                <EditText
                    android:id="@+id/et_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="时间点"
                    android:text="10"
                    android:textColor="#565656"/>

                <EditText
                    android:id="@+id/et_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="分享前缀"
                    android:textColor="#565656"/>
            </LinearLayout>


            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="生成图片"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>